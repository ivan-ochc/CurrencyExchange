<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="currencyexchange.controller"/>
    <context:component-scan base-package="currencyexchange.model"/>
    <context:component-scan base-package="currencyexchange.repository"/>
    <context:component-scan base-package="currencyexchange.service"/>

    <import resource="spring-jpa.xml"/>

    <import resource="spring-mvc.xml"/>

    <import resource="spring-security.xml"/>

    <import resource="spring-mail.xml"/>

</beans>